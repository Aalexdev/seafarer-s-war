<?xml version="0.1.0" encoding="utf-8"?>

<logs log="data/logs/logs.log" error="data/logs/err.log"/>

<window>
    <size w="1080" h="720"/>
    <pos x="centered" y="centered"/>
    <title title="seafarers' war"/>
</window>

<fps limiter="60"/>
<font path="res/font/bombardier.ttf" size="16"/>

<sprites>
    <sprite name="explosion 1" width="128" height="128" image="res/sprites/explosions/1.bmp"/>
    <sprite name="explosion 2" width="128" height="128" image="res/sprites/explosions/2.bmp"/>
    <sprite name="explosion 3" width="128" height="128" image="res/sprites/explosions/3.bmp"/>
    <sprite name="explosion 4" width="128" height="128" image="res/sprites/explosions/4.bmp"/>
    <sprite name="explosion 5" width="128" height="128" image="res/sprites/explosions/5.bmp"/>
    <sprite name="explosion 6" width="100" height="100" image="res/sprites/explosions/6.bmp"/>
    <sprite name="explosion 7" width="128" height="128" image="res/sprites/explosions/7.bmp"/>
</sprites>

<layers>
    <layer name="depth sea" id="1" angle="50" delay="75" speed="2" height="-10">
        <image path="res/img/backgrounds/darksea.bmp" alpha="255"/>
    </layer>
    
    <layer name="sea" id="0" angle="90" delay="50" speed="2" height="0">
        <image path="res/img/backgrounds/sea.bmp" alpha="150"/>
    </layer>

</layers>

<window>
    <icon path="res/img/icon/icon.bmp"/>
</window>


<read path="data/events.xml"/>
<read path="data/entity.xml"/>
<read path="data/equipment.xml"/>

<read path="data/menus/mainMenu.xml"/>